<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F6F6F6">

        <LinearLayout
            android:id="@+id/dashboard_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/blue_500"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_500"
                android:orientation="vertical"
                android:paddingVertical="30dp">

                <TextView
                    android:id="@+id/amount_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Php 500.00"
                    android:textColor="#fff"
                    android:textSize="40dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total Balance"
                    android:textColor="@color/blue_700"
                    android:textSize="20dp" />


            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/button_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dashboard_head"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageButton
                        android:id="@+id/goto_input_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_type_one"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/baseline_add_24"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/goto_user_settings_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginHorizontal="50dp"
                        android:background="@drawable/button_type_one"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/baseline_settings_24" />

                    <ImageButton
                        android:id="@+id/logout_btn"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/button_type_one"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/baseline_exit_to_app_24" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_label_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_list"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/labelButton"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Add"
                        android:textSize="15dp"

                        />

                    <TextView
                        android:id="@+id/labelButton2"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:gravity="center"
                        android:text="Setting"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/labelButton3"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Logout"
                        android:textSize="15dp"
                        android:tint="@color/white" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="My Transactions"
                    android:textSize="15dp"
                    android:layout_margin="10dp"
                    android:tint="@color/white" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/transaction_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/recyclerview_transaction_item"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>

            </LinearLayout>
        </ScrollView>







    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>