<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettingsFragment"
    android:padding="12dp">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_settings_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="center"/>

        <TextView
            android:id="@+id/settings_old_username_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_settings_title_tv"
            android:text="Juan Dela Cruz"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="center"/>


        <EditText
            android:id="@+id/new_username_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="New Username"/>

        <EditText
            android:id="@+id/new_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@id/new_username_et"
            android:hint="New Password"/>

        <Button
            android:id="@+id/update_user_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_password_et"
            android:layout_centerHorizontal="true"
            android:text="save"/>

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>