<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="5dp"
    android:background="#EFEFEF"
    android:padding="10dp">

    <TextView
        android:id="@+id/transaction_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+Php 500.00"
        android:textColor="@color/blue_700"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/transaction_source_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Juan Dela Cruz"
        android:layout_below="@+id/transaction_amount_tv"
        android:textSize="20dp"/>


    <TextView
        android:id="@+id/transaction_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/23/23"
        android:layout_alignParentRight="true"
        android:textSize="20dp"/>


</RelativeLayout>
